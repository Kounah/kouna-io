@section('title')
  Admin Tools
@endsection

@section('scripts')
<script type="text/javascript">
  (function($, M) {
    $(document).ready(function() {
      function _do(something) {
        $.ajax({
          method    : 'get',
          url       : '/admin/' + something,
          dataType  : 'json'
        }).done(function(data) {
          M.toast({html: data.stdout.split('\n').join('<br>')});
        }).fail(function() {
          console.log('failed ajax call to /admin/' + something);
        })
      }

      $('#update').click(function() {
        _do('update')
      })

      $('#restart').click(function() {
        _do('restart')
      })
    })
  })(jQuery, M)
</script>
@endsection

@section('content')
<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Admin Tools</span>
          <button class="btn" type="submit" id="update">
            <i class="material-icons left">update</i>
            Pull Latest Version
          </button>
          <button class="btn" type="submit" id="restart">
            <i class="material-icons left">refresh</i>
            Restart Backend Process
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
@endsection
